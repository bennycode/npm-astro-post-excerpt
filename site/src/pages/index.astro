---
import { getCollection } from 'astro:content'
import PostExcerpt, { PropHeadings, PropRenderer } from "@igor.dvlpr/astro-post-excerpt";

const posts = await getCollection('blog')
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
  </head>
  <body>
    {posts.map((post) =>
		<PostExcerpt post={post} words={14} headings={PropHeadings.None} smartEllipsis={false} renderer={PropRenderer.Hybrid} />
		<br>
		<br>
		)}
  </body>
</html>
